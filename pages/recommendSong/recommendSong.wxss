/* pages/recommendSong/recommendSong.wxss */
/* 头部样式 */
.header {
  position: relative;
  width: 100%;
  height: 300rpx;
}
.header image {
  width: 100%;
  height: 100%;
}
.date {
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -150rpx;
  margin-top: -40rpx;
  width: 300rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
}
.date {
  font-size: 38rpx;
}
/* 列表区 */
.listContainer {
  padding: 0 20rpx;
  position: relative;
  top: -20rpx;
  background: #fff;
  border-radius: 30rpx;
}
.listHeader {
  height: 80rpx;
  line-height: 80rpx;
}
.listContainer .more {
  float: right;
}
/* 内容区 */
.listScroll {
  height: calc(100vh -380rpx);
}
.listItem {
  display: flex;
  height: 80rpx;
  margin-bottom: 20rpx;
}
.listItem image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
  margin-left: 20rpx;
}
.listItem .musicInfo {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.listItem .musicInfo text {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 26rpx;
  max-width: 500rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.iconfont {
  position: absolute;
  right: 0;
  width: 80rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
}